DEV_DIR     = /Developer/Platforms/iPhoneOS.platform/Developer
SDK_DIR     = $(DEV_DIR)/SDKs/iPhoneOS3.1.2.sdk

CC          = $(DEV_DIR)/usr/bin/arm-apple-darwin9-gcc-4.0.1
CCFLAGS     = -O2 -Wall -s
DEFINES     = -DNDEBUG
INCLUDES    = -I../zlib-1.2.3 -I$(SDK_DIR)/usr/lib/gcc/arm-apple-darwin9/4.0.1/include -I$(SDK_DIR)/usr/include
AR          = $(DEV_DIR)/usr/bin/ar
ARFLAGS     = rs
OBJS        = png.o pngerror.o pngget.o pngmem.o pngpread.o pngread.o pngrio.o pngrtran.o pngrutil.o pngset.o pngtrans.o pngwio.o pngwrite.o pngwtran.o pngwutil.o
TARGET      = libpng.a


.PHONY: all clean

all: $(TARGET)

clean:
	-rm -f $(TARGET) $(OBJS)

$(TARGET): $(OBJS)
	$(AR) $(ARFLAGS) $(TARGET) $(OBJS)


.SUFFIXES: .o .c

.c.o:
	$(CC) $(CCFLAGS) $(DEFINES) $(INCLUDES) -c $< -o $@
